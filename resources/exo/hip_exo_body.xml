<mujocoinclude>  <!-- 或者直接不写标签，MyoSuite 的 loader 也能读；保持风格我这里用 mujocoinclude -->

    <!-- 外骨骼根 body，坐标系 = 调用处（pelvis）的坐标系 -->
    <body name="exo_base" pos="0 0 0" quat="1 0 0 0">

        <!-- 原来 worldbody 里的 base_link 几何 -->
        <geom name="exo_base_visual" type="mesh" mesh="base_link" rgba="0.8 0.8 0.8 1"/>

        <!-- 原来的 rr_Link 分支 -->
        <body name="rr_Link" pos="0.17596 0.11423 -0.11131" quat="0.34494 -0.667777 -0.232539 0.617264">
            <inertial pos="0.0053125 -0.00033527 -0.0033844"
                      quat="0.0220877 0.708216 -0.0223834 0.705295"
                      mass="0.022269"
                      diaginertia="3.00903e-05 1.83855e-05 1.19352e-05" />
            <joint name="rr_joint" pos="0 0 0" axis="0 0 -1" limited="true" range="-1.571 1.571" />
            <geom type="mesh" rgba="1 1 1 1" mesh="rr_Link" />
            <body name="ra_Link" pos="0.072919 -0.011668 -0.005" quat="0.677987 0.677989 0.20083 0.200829">
                <inertial pos="0.19708 0.084822 0.0086953"
                          quat="-0.284834 0.70658 0.0503551 0.645816"
                          mass="0.13171"
                          diaginertia="0.000726782 0.000701376 6.17719e-05" />
                <!-- 限制 range="-1.571 1.571"0 1e-6" -->
                <joint name="ra_joint" pos="0 0 0" axis="0 0 1" limited="true" range="-1.571 1.571" />
                <geom type="mesh" rgba="1 1 1 1" mesh="ra_Link" />
                <body name="ra_attach" pos="0.27 0.12 -0.02" quat="1 0 0 0">
                    <inertial pos="0 0 0" mass="1e-6" diaginertia="1e-9 1e-9 1e-9"/>
                    <!-- 可选：放个 site 当可视化标记 pos="0.27 0.12 -0.02center"锚点-->
                    <site name="ra_strap" pos="0 0 0" size="0.03" type="sphere" rgba="1 0 0 1" group="4"/>
                </body>
            </body>
        </body>

        <!-- 原来的 lr_Link 分支 -->
        <body name="lr_Link" pos="-0.17596 0.11423 -0.11131" quat="0.617263 0.232537 0.667778 0.344942">
            <inertial pos="0.0053122 0.00033545 -0.0033844"
                      quat="-0.0220937 0.708216 0.0223894 0.705294"
                      mass="0.022269"
                      diaginertia="3.00893e-05 1.83855e-05 1.19352e-05" />
            <joint name="lr_joint" pos="0 0 0" axis="0 0 1" limited="true" range="-1.571 1.571" />
            <geom type="mesh" rgba="1 1 1 1" mesh="lr_Link" />
            <body name="la_Link" pos="0.072919 0.011668 -0.005" quat="0.677987 -0.677989 0.20083 -0.200829">
                <inertial pos="0.1971 -0.084747 0.0086939"
                          quat="0.284789 0.706579 -0.0504234 0.645832"
                          mass="0.13171"
                          diaginertia="0.000726649 0.000701248 6.1763e-05" />
                <!-- 限制 range="-1.571 1.571" -->
                <joint name="la_joint" pos="0 0 0" axis="0 0 -1" limited="true" range="-1.571 1.571" />
                <geom type="mesh" rgba="1 1 1 1" mesh="la_Link" />
                <!-- 可选：放个 site 当可视化标记0.2 -0.15 0.05 -->
                <body name="la_attach" pos="0.27 -0.12 -0.02" quat="1 0 0 0">
                    <inertial pos="0 0 0" mass="1e-6" diaginertia="1e-9 1e-9 1e-9"/>
                    <site name="la_strap" pos="0 0 0" size="0.03" type="sphere" rgba="0 0 1 1" group="4"/>
                </body>
            </body>
        </body>
    </body>

</mujocoinclude>
